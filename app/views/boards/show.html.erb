<p style="color: green"><%= notice %></p>

<h2>Boards#show</h2>

<div id="lists">
  <ul data-controller="sortable" style="display: flex;">
    <% @board.lists.each do |list| %>
      <li data-list-id="<%= list.id %>" style="width: 400px; border:solid">
        <%= render list %>
      </li>
    <% end %>
  </ul>
</div>
